<UserControl x:Class="Fitness.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fitness.Views"
             mc:Ignorable="d" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp" xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" xmlns:viewmodel="clr-namespace:Fitness.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:HomeViewModel}"
             d:DesignHeight="450" d:DesignWidth="750">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

 
        <Border Grid.Row="0" Grid.Column="0"
            Background="#200F53"
            CornerRadius="10" 
            Padding="10">
          

        </Border>


        <Border Grid.Row="0" Grid.Column="2"
            Background="#200F53"
            CornerRadius="10" 
            Padding="10">
            <lvc:CartesianChart>
                <lvc:CartesianChart.Series>
                    <lvc:ColumnSeries Title="Mary" Values="2,5,4" Fill="Blue" />
                    <lvc:ColumnSeries Title="Ana" Values="3,1,6" Fill="Red" />
                </lvc:CartesianChart.Series>
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Categories" Labels="Category 1,Category 2,Category 3" />
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Values" />
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </Border>

     
        <Border Grid.Row="0" Grid.Column="4"
            Background="#200F53"
            CornerRadius="10" 
            Padding="10">
            <lvc:PieChart Series="{Binding Series}" />
        </Border>

        <Border Grid.Row="2" Grid.Column="0"
            Background="#200F53"
            CornerRadius="10" 
            Padding="10">
     
        </Border>

     
        <Border Grid.Row="2" Grid.Column="2"
            Background="#200F53"
            CornerRadius="10" 
            Padding="10">
          
        </Border>

    
        <Border Grid.Row="2" Grid.Column="4"
            Background="#200F53"
            CornerRadius="10" 
            Padding="10">
          
        </Border>
    </Grid>
</UserControl>

